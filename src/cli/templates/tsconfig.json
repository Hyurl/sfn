{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "preserveConstEnums": true,
        "rootDir": "src",
        "outDir": "dist",
        "newLine": "LF",
        "experimentalDecorators": true,
        "sourceMap": true,
        "importHelpers": true,
        "pretty": true,
        "removeComments": true,
    },
    "files": [
        "src/index.ts"
    ],
    "include": [
        "src/App/*/*.ts",
        "src/App/*/*/*.ts"
    ],
    "exclude": [
        "node_modules/*"
    ]
}