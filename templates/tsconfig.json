{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "preserveConstEnums": true,
        "rootDir": "src",
        "outDir": "dist",
        "newLine": "LF",
        "experimentalDecorators": true,
        "sourceMap": true,
        "importHelpers": true,
        "pretty": true,
        "removeComments": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "emitDecoratorMetadata": true,
    },
    "include": [
        "src/*.ts",
        "src/controllers/*.ts",
        "src/controllers/*/*.ts",
        "src/bootstrap/*.ts",
        "src/services/*.ts",
        "src/services/*/*.ts",
        "src/locales/*.ts",
        "src/hooks/*.ts",
        "src/hooks/*/*.ts",
        "src/models/*.ts",
        "src/models/*/*.ts",
        "src/utils/*.ts",
        "src/utils/*/*.ts"
    ],
    "exclude": [
        "./node_modules/*"
    ]
}