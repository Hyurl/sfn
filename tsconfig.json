{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2015",
        "preserveConstEnums": true,
        "rootDir": "src",
        "outDir": "dist",
        "newLine": "LF",
        "experimentalDecorators": true,
        "sourceMap": true,
        "importHelpers": true,
        "pretty": true,
        "removeComments": true,
        "noUnusedLocals": true,
        "lib": [
            "es2015",
            "es2016.array.include"
        ]
    },
    "files": [
        "src/index.ts",
        "src/core/bootstrap/ControllerLoader.ts"
    ],
    "include": [
        "src/bootstrap/*.ts",
        "src/controllers/*.ts",
        "src/controllers/*/*.ts",
        "src/locales/*.ts",
        "src/core/middleware/*.ts",
        "src/cli/*.ts"
    ],
    "exclude": [
        "node_modules/*"
    ]
}